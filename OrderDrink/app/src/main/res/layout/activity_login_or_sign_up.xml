<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xam_vang"
    tools:context=".Activitys.LoginOrSignUp">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/back2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:lottie_rawRes="@raw/builtifull"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tiltleAnim"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="300dp"
        app:lottie_rawRes="@raw/tilte_ani"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:lottie_rawRes="@raw/back3"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:lottie_rawRes="@raw/ligth_coffe"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

    <TextView
        android:id="@+id/ngay_dep_troi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/uong_coffe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ngay_dep_troi"
        android:textColor="@color/btn_color"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signBtn"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/sign_up"
        android:elevation="0dp"
        android:text="@string/dang_ky"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:background="@drawable/login"
        android:text="@string/dang_nhap"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="30dp"
        android:elevation="0dp"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/googleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/google_btn"
        android:drawableStart="@drawable/google"
        android:drawablePadding="10dp"
        android:paddingStart="30dp"
        android:text="@string/google_btn"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:paddingEnd="30dp"
        android:textSize="20dp" />


</RelativeLayout>